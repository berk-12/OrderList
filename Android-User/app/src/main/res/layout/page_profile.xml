<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:background="@color/colorChocolate"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile_picture"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="Deneme3"
                    android:textColor="@color/colorWhite"
                    android:textSize="20dp"
                    android:layout_marginLeft="25dp"/>

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Deneme@deneme.com"
                    android:textColor="@color/colorLightGray"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person_pin_circle_black_24dp"
                android:layout_gravity="bottom"/>

            <TextView
                android:id="@+id/your_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Your addresses"
                android:textColor="@color/colorBlack"
                android:textSize="15dp"
                android:gravity="bottom"/>

        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"/>

                <TextView
                    android:id="@+id/addAddress"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:textSize="15dp"
                    android:layout_marginLeft="25dp"
                    android:text=""
                    android:textColor="@color/colorPrimaryDark"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>